{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2015", "dom", "dom.iterable"],
    "sourceMap": false,
    "removeComments": false,
    "noEmit": false,
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
